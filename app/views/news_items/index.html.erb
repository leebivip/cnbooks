<% content_for :body_content_title do %>
  <%= t('plugins.refinerycms_news.title') %>
<% end %>

<% content_for :body_content_left do %>
  <%= @page[:body] if @news_items.offset == 0 %>

  <% if @news_items.any? %>
    <% @news_items.each do |item| %>

	<article class='clearfix'>
	  <header>
	    <h3><%= link_to item.title, news_item_url(item) %></h3>
	    <details>
	      <time datetime="<%= item.publish_date.strftime('%Y-%m-%d') %>" class='posted_at'>
	      	<%= t('.published') %> <%= l(item.publish_date, :format => :long) %>
	        
	      </time>	  
	    </details>
	  </header>
	  
	  <section class='clearfix'>
      <%= truncate  item.body, :length => 220,
                    :omission => " ... #{link_to t('.read_more'), news_item_url(item)}",
                    :preserve_html_tags => true %>
		</section>
	</article>

    <% end %>

    <%= will_paginate(@news_items) %>
  <% else %>
    <p><em><%= t('.no_items_yet') %></em></p>
  <% end %>
<% end -%>

<%= render :partial => "/shared/content_page", :locals => {:hide_sections => [:body_content_title]}   %>
